  { key = "Y", mods = "Alt", chars = "\u001By" },
  { key = "Z", mods = "Alt", chars = "\u001Bz" },
]

[env]

TERM = "xterm-256color"

[general]
live_config_reload = true

import = [
    "~/.config/alacritty/themes/github_dark_default.toml"
]

