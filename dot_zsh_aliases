# Unix
alias ls='ls --color=auto'
alias ll='ls -altr --time-style="+%F %H:%m:%S"'
alias ln='ln -v'
alias mkdir='mkdir -p'
# alias tig='tig --all'

# Git
# alias gad=fz-git-add
# alias gbr=fz-git-branch
# alias gco=fz-git-checkout
# alias gsh=fz-git-show
# alias gdel=fz-git-delete-branch
# alias gsta=fz-git-stash-apply
alias gcm='git commit -m'
alias gsw='git switch'

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Crontab editing
alias crontab='VIM_CRONTAB=true crontab'

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local

# Use nvim as vim
alias vim='nvim'

alias dotfiles='cd ~/dotfiles'

# docker compose
# I don't use dc command...
alias dc="docker compose"
alias dcps="dc ps --format 'table {{.Name}}\t{{.Image}}\t{{.Ports}}\t{{.Status}}\t{{.Size}}'"

# k8s
alias kc="kubectl"

# minikube
alias mk="minikube"

# claude code
alias claude="/Users/bob/.claude/local/claude"
