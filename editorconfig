# top-most EditorConfig file
root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2

[*.sh]
indent_size = 2

[*.{js,ts,es6}]
indent_size = 2

[*.{rb}]
indent_size = 2

[{package.json,.travis.yml,.eslintrc.js}]
indent_size = 2

[*.{tf,tfvars,tfstate,tfstate.backup}]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false
insert_final_newline = false
indent_size = 4

[{Makefile,go.mod,go.sum,*.go,.gitmodules}]
indent_style = tab
indent_size = 4

