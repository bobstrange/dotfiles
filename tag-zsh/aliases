# Unix
alias ll="ls -al --time-style=long-iso"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias tig="tig --all"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Crontab editin
alias crontab="VIM_CRONTAB=true crontab"

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local

# Use nvim as vim
alias vim="nvim"

# Restart xremap daemon because it sometimes fails
alias restart-xremap="systemctl --user restart xremap"

alias dotfile="cd ~/dotfiles"
